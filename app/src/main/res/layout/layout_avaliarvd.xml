<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="womm.quality_services.app.activity_avaliarvd" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbAVDToolbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/ivAVDArrowback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/ivGeralQualityServicesDesc"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.08"
            app:srcCompat="@drawable/ic_arrowbackwhite" />

        <TextView
            android:id="@+id/tvAVDTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="65dp" />

        <ImageView
            android:id="@+id/ivAVDHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/ivGeralQualityServicesDesc"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.08"
            app:srcCompat="@drawable/ic_homewhite" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tvAVDTitulo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/tvAvaTituloLabel"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbAVDToolbar" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAVDTitulo2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAVDHospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/tvAVDHospitalSelecionadoLabel"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvAVDHospitalVD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="7dp"
                android:textColor="#4d4d4d"
                android:text=""/>

            <TextView
                android:id="@+id/tvAVDData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvAvaDataLabel"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etAVDData"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:textSize="16sp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvAVDEspera"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/tvAvaEsperaLabel"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
            <RatingBar
                android:id="@+id/rbAVDEspera"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:isIndicator="false"
                android:max="5"
                android:numStars="5"
                android:progressTint="@color/colorAccentLight"
                android:rating="2.5"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:stepSize="0.5"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp" />

            <TextView
                android:id="@+id/tvAVDRecepcao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/tvAvaRecepcaoLabel"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/rbAVDRecepcao"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:isIndicator="false"
                android:progressTint="@color/colorAccentLight"
                android:max="5"
                android:numStars="5"
                android:rating="2.5"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:stepSize="0.5"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp" />

            <TextView
                android:id="@+id/tvAVDOrganizacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/tvAvaOrganizacaoLabel"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/rbAVDOrganizacao"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:isIndicator="false"
                android:progressTint="@color/colorAccentLight"
                android:max="5"
                android:numStars="5"
                android:rating="2.5"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:stepSize="0.5"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp" />

            <TextView
                android:id="@+id/tvAVDSinalizacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/tvAvaSinalizacaoLabel"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/rbAVDSinalizacao"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:isIndicator="false"
                android:progressTint="@color/colorAccentLight"
                android:max="5"
                android:numStars="5"
                android:rating="2.5"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:stepSize="0.5"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp" />

            <TextView
                android:id="@+id/tvAVDCordialidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/tvAvaCordialidadeLabel"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/rbAVDCordialidade"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:isIndicator="false"
                android:progressTint="@color/colorAccentLight"
                android:max="5"
                android:numStars="5"
                android:rating="2.5"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:stepSize="0.5"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp" />

            <TextView
                android:id="@+id/tvAVDLimpeza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/tvAvaLimpezaLabel"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/rbAVDLimpeza"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:isIndicator="false"
                android:progressTint="@color/colorAccentLight"
                android:max="5"
                android:numStars="5"
                android:rating="2.5"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:stepSize="0.5"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp" />

            <TextView
                android:id="@+id/tvAVDMedico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/tvAvaMedicoLabel"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/rbAVDMedico"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:isIndicator="false"
                android:progressTint="@color/colorAccentLight"
                android:max="5"
                android:numStars="5"
                android:rating="2.5"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:stepSize="0.5"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvAVDEstacionamento"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tvAvaEstacionamentoLabel"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <CheckBox
                    android:id="@+id/cbAVDEstacionamento"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@+id/tvAVDEstacionamento"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleX="0.55"
                    android:scaleY="0.55"
                    android:text="@string/rbtAvaNaoutilizeiLabel"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#4d4d4d"
                    android:textSize="23sp" />

                <RatingBar
                    android:id="@+id/rbAVDEstacionamento"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:isIndicator="false"
                    android:max="5"
                    android:numStars="5"
                    android:progressTint="@color/colorAccentLight"
                    android:rating="2.5"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:stepSize="0.5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cbAVDEstacionamento" />

                <TextView
                    android:id="@+id/tvAVDTriagem"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tvAvaTriagemLabel"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/rbAVDEstacionamento"
                    app:layout_constraintStart_toStartOf="parent"/>

                <CheckBox
                    android:id="@+id/cbAVDTriagem"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="12dp"
                    android:scaleX="0.55"
                    android:scaleY="0.55"
                    android:text="@string/rbtAvaNaoutilizeiLabel"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#4d4d4d"
                    android:textSize="23sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/tvAVDTriagem"
                    app:layout_constraintTop_toBottomOf="@+id/rbAVDEstacionamento" />

                <RatingBar
                    android:id="@+id/rbAVDTriagem"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:isIndicator="false"
                    android:max="5"
                    android:numStars="5"
                    android:progressTint="@color/colorAccentLight"
                    android:rating="2.5"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:stepSize="0.5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cbAVDTriagem" />

                <TextView
                    android:id="@+id/tvAVDEnfermaria"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tvAvaEnfermariaLabel"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/rbAVDTriagem"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteX="0dp" />

                <CheckBox
                    android:id="@+id/cbAVDEnfermaria"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="12dp"
                    android:scaleX="0.55"
                    android:scaleY="0.55"
                    android:text="@string/rbtAvaNaoutilizeiLabel"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#4d4d4d"
                    android:textSize="23sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/tvAVDEnfermaria"
                    app:layout_constraintTop_toBottomOf="@+id/rbAVDTriagem" />

                <RatingBar
                    android:id="@+id/rbAVDEnfermaria"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:isIndicator="false"
                    android:max="5"
                    android:numStars="5"
                    android:progressTint="@color/colorAccentLight"
                    android:rating="2.5"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:stepSize="0.5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cbAVDEnfermaria" />

                <TextView
                    android:id="@+id/tvAVDExames"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tvAvaExamesLabel"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rbAVDEnfermaria"
                    tools:layout_editor_absoluteX="0dp" />

                <CheckBox
                    android:id="@+id/cbAVDExames"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="12dp"
                    android:scaleX="0.55"
                    android:scaleY="0.55"
                    android:text="@string/rbtAvaNaoutilizeiLabel"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#4d4d4d"
                    android:textSize="23sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/tvAVDEnfermaria"
                    app:layout_constraintTop_toBottomOf="@+id/rbAVDEnfermaria" />

                <RatingBar
                    android:id="@+id/rbAVDExames"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:isIndicator="false"
                    android:max="5"
                    android:numStars="5"
                    android:progressTint="@color/colorAccentLight"
                    android:rating="2.5"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:stepSize="0.5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cbAVDExames" />

                <TextView
                    android:id="@+id/tvAVDInternacao"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tvAvaInternacaoLabel"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rbAVDExames" />

                <CheckBox
                    android:id="@+id/cbAVDInternacao"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="12dp"
                    android:scaleX="0.55"
                    android:scaleY="0.55"
                    android:text="@string/rbtAvaNaoutilizeiLabel"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#4d4d4d"
                    android:textSize="23sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/tvAVDEnfermaria"
                    app:layout_constraintTop_toBottomOf="@+id/rbAVDExames" />

                <RatingBar
                    android:id="@+id/rbAVDInternacao"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:isIndicator="false"
                    android:max="5"
                    android:numStars="5"
                    android:progressTint="@color/colorAccentLight"
                    android:rating="2.5"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:stepSize="0.5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAVDInternacao" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tvAVDObservacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/tvAvaObservacaoLabel"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/etAVDObservacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top"
                android:hint="@string/tvAvaObservacaoHint"
                android:inputType="textMultiLine|textNoSuggestions|textVisiblePassword"
                android:maxLength="140"
                android:lines="5"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cvAVDEnviar"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvAVDEnviar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/btAvaEnviarLabel"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <ProgressBar
                android:id="@+id/pbEnviandovd"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                app:layout_constraintVertical_bias="0.161" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
