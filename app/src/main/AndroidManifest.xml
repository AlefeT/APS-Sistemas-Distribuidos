<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alefe.aps_sistemas_distribuidos.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_aps"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_aps"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="alefe.aps_sistemas_distribuidos.app.activity_splashscreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="alefe.aps_sistemas_distribuidos.app.activity_principal"
            android:screenOrientation="portrait" />

        <activity
            android:name="alefe.aps_sistemas_distribuidos.app.activity_rankinglocais"
            android:screenOrientation="portrait" />

        <activity
            android:name="alefe.aps_sistemas_distribuidos.app.activity_pesquisarlocais"
            android:screenOrientation="portrait" />

        <activity
            android:name="alefe.aps_sistemas_distribuidos.app.activity_resultadopesquisa"
            android:screenOrientation="portrait" />

        <activity
            android:name="alefe.aps_sistemas_distribuidos.app.activity_verdetalhes"
            android:screenOrientation="portrait" />

        <activity
            android:name="alefe.aps_sistemas_distribuidos.app.activity_duvidasfreq"
            android:screenOrientation="portrait" />

    </application>

</manifest>